{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .PWD }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "p:blue",
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}} "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:cyan",
          "properties": {
            "folder_icon": "..",
            "home_icon": "~",
            "style": "agnoster_short",
            "max_depth": 3,
            "folder_separator_icon": " \ue0b1 ",
            "hide_root_location": false
          },
          "template": "{{ .Path }} "
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:green",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:yellow{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:red{{ end }}",
            "{{ if gt .Ahead 0 }}p:magenta{{ end }}",
            "{{ if gt .Behind 0 }}p:magenta{{ end }}"
          ],
          "properties": {
            "branch_icon": "\ue0a0 ",
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "github_icon": "\uf408 ",
            "gitlab_icon": "\uf296 ",
            "bitbucket_icon": "\uf171 "
          },
          "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} "
        }
      ]
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "p:yellow",
          "properties": {
            "threshold": 500,
            "style": "austin",
            "always_enabled": false
          },
          "template": "{{ .FormattedMs }} "
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "p:green",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:red{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "template": "{{ if gt .Code 0 }}\u2718 {{ .Code }}{{ else }}\u2714{{ end }} "
        },
        {
          "type": "kubectl",
          "style": "plain",
          "foreground": "p:cyan",
          "template": "\uf308 {{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}} "
        },
        {
          "type": "aws",
          "style": "plain",
          "foreground": "p:yellow",
          "template": "\ue7ad {{.Profile}}{{if .Region}}@{{.Region}}{{end}} "
        },
        {
          "type": "python",
          "style": "plain",
          "foreground": "p:blue",
          "template": "\ue235 {{ if .Venv }}{{ .Venv }} {{ end }}"
        },
        {
          "type": "node",
          "style": "plain",
          "foreground": "p:green",
          "template": "\ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} "
        },
        {
          "type": "go",
          "style": "plain",
          "foreground": "p:cyan",
          "template": "\ue626 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:blue",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:red{{ end }}"
          ],
          "template": "\u276f "
        }
      ]
    }
  ],
  "transient_prompt": {
    "foreground": "p:blue",
    "foreground_templates": [
      "{{ if gt .Code 0 }}p:red{{ end }}"
    ],
    "template": "\u276f "
  },
  "secondary_prompt": {
    "foreground": "p:blue",
    "template": "\u276f\u276f "
  },
  "palette": {
    "black": "#1e1e2e",
    "red": "#f38ba8",
    "green": "#a6e3a1",
    "yellow": "#f9e2af",
    "blue": "#89b4fa",
    "magenta": "#cba6f7",
    "cyan": "#94e2d5",
    "white": "#cdd6f4",
    "gray": "#6c7086"
  }
}
